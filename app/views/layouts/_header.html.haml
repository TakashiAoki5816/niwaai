.header
  .header__left
    = link_to root_path, class: "logo" do
      = image_tag "pict/niwaai-logo.png", size: "150x70"
    .searchform
      = form_with(url: search_posts_path, local: true, method: :get) do |f|
        = f.text_field :keyword, placeholder: "庭園名で検索する", class: "search-input"
        = f.submit "検索", class: "search-btn"
  - if user_signed_in?
    %ul.header__right
      %li.new-post
        %i.fas.fa-edit.icon
        = link_to "新規投稿", new_post_path
      %li.posts
        %i.fab.fa-leanpub.icon
        = link_to "投稿一覧", posts_path
      %li.users
        %i.fas.fa-users.icon
        = link_to "ユーザー一覧", users_path
      %li.mypage
        %i.fa.fa-user.icon
        = link_to "マイページ", user_path(current_user)
      %li.logout
        %i.fas.fa-sign-out-alt.icon
        = link_to "ログアウト", destroy_user_session_path, method: :delete
  - else
    %ul.header__right
      %li.posts
        %i.fab.fa-leanpub.icon
        = link_to "投稿一覧", posts_path
      %li.users
        %i.fas.fa-users.icon
        = link_to "ユーザー一覧", users_path
      %li.sign_in
        %i.fas.fa-sign-out-alt.icon
        = link_to "新規登録", new_user_registration_path
      %li.logout
        %i.fas.fa-sign-out-alt.icon
        = link_to "ログイン", user_session_path