.header
  .header__left
    = link_to root_path, class: "logo" do
      = image_tag "pict/niwaai-logo.png", size: "150x70"
    .searchform
      = form_with(url: search_posts_path, local: true, method: :get) do |f|
        = f.text_field :keyword, placeholder: "庭園名で検索する", class: "search-input"
        = f.submit "検索", class: "search-btn"
  - if user_signed_in?
    %ul.header__right
      %li
        = link_to new_post_path, class: "new-post" do
          %i.fas.fa-edit.icon
          新規登録
      %li
        = link_to posts_path, class: "posts" do
          %i.fas.fa-th-list.icon
          投稿一覧
      %li.users
        = link_to users_path, class: "users" do
          %i.fas.fa-users.icon
          ユーザー一覧
      %li
        = link_to user_path(current_user), class: "mypage" do
          %i.fa.fa-user.icon
          マイページ
      %li
        = link_to destroy_user_session_path, method: :delete, class: "logout" do
          %i.fas.fa-sign-out-alt.icon
          ログアウト

  - else
    %ul.header__right
      %li.posts
        %i.fas.fa-th-list.icon
        = link_to "投稿一覧", posts_path
      %li.users
        %i.fas.fa-users.icon
        = link_to "ユーザー一覧", users_path
      %li.sign_in
        %i.fas.fa-sign-out-alt.icon
        = link_to "新規登録", new_user_registration_path
      %li.logout
        %i.fas.fa-sign-out-alt.icon
        = link_to "ログイン", user_session_path