.header
  .header__left
    = link_to "庭会", root_path, class: "logo"
    .searchform
      - if user_signed_in?
        = form_with(url: search_posts_path, local: true, method: :get) do |f|
          = f.text_field :keyword, placeholder: "庭園名で検索する", class: "search-input"
          = f.submit "検索", class: "search-btn"
  .header__right
    - if user_signed_in? && current_user.email != "guest@example.com"
      .post
        = link_to "新規投稿", new_post_path
      .posts
        = link_to "投稿一覧", posts_path
    - if user_signed_in?
      .users
        = link_to "ユーザー一覧", users_path
      .username
        = link_to current_user.name, user_path(current_user)