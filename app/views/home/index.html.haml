.wrapper
  -# ヘッダー
  .header
    .header__left
      .logo 庭あい
    .header__center
      .logo 庭あい
    .header__right
      .post
        = link_to "投稿する", new_post_path
      .username
        = link_to current_user.name, user_path(current_user)

  -# アプリ紹介
  .mainApp
    = image_tag "pict/kiyosumi.jpg", size: "1500x500"
  .mainContents
    .Contents-info
      %h2.Contents-info__name 投稿一覧
    -# 投稿一覧
    .Contents
      - @posts.each do |post|
        .Contents-box
          .Contents-box__header
            .title
              = post.garden_name
          .Contents-box__user
            .user-image
              = image_tag post.user.image.url, size: "50x50"
            .username
              = post.user.name
          .Contents-box__titlebox
            .title
              = post.title
          .Contents-box__imagebox
            .image
              = image_tag post.image.url, size: "330x260"
          .Contents-box__footer
            .like
              いいね！
            .comment
              コメント1件