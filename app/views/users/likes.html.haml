.main
  .userInfo
    .userInfo__image
      = image_tag @user.image.url
    .userInfo__name
      = @user.name
    .userInfo__email
      = @user.email
    .userInfo__edit
      .editbtn
        = link_to "編集", edit_user_registration_path(current_user)
      .deletebtn
        = link_to "削除"
  .user-detail
    .user-detail__posts
      投稿
    .user-detail__likes
      = link_to "いいねした投稿",likes_user_path(@user)
    .user-detail__following
      フォロー
    .user-detail__follower
      フォロワー
  .Contents
    - @like.each do |like|
      .Contents-box
        .Contents-box__header
          .title
            = like.post.garden_name
        .Contents-box__user
          .user-image
            = image_tag like.user.image.url, size: "50x50"
          .username
            = like.post.user.name
        .Contents-box__titlebox
          .title
            = like.post.title
        .Contents-box__imagebox
          .image
            = image_tag like.post.image.url, size: "300x240"
        .Contents-box__footer
          .like
            いいね！
          .comment
            コメント1件